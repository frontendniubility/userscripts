{
	"compilerOptions": {

		"allowJs": false,
		"checkJs": false,

		"outDir": "/dist",
		"rootDir": "/",
		"strict": true,
		// "esMoudleInterop": true,
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"target": "esnext",

		"declaration": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
