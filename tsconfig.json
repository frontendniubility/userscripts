{
	"compilerOptions": {
		"target": "es5",

		"removeComments": true,

		"outDir": "./dist",
		"watch": true,
		"allowJs": false,
		"checkJs": false,

		"rootDir": "/",
		"strict": true,
		// "esMoudleInterop": true,
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,

		"declaration": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/__tests__/*"],

	"compileOnSave": true
}
